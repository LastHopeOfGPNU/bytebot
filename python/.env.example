# Database Configuration
DATABASE_URL=postgresql+asyncpg://bytebot:password@localhost:5432/bytebot

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# AI Provider API Keys (choose one or more)
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=...

# Service Configuration
AGENT_HOST=0.0.0.0
AGENT_PORT=9991
DESKTOP_HOST=0.0.0.0
DESKTOP_PORT=9990
UI_HOST=0.0.0.0
UI_PORT=9992

# External Service URLs
BYTEBOT_AGENT_BASE_URL=http://localhost:9991
BYTEBOT_DESKTOP_BASE_URL=http://localhost:9990
BYTEBOT_DESKTOP_VNC_URL=http://localhost:6080

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
DEBUG=false
RELOAD=false

# VNC Configuration
VNC_HOST=localhost
VNC_PORT=6080

# Desktop Environment
DISPLAY=:1
VNC_PASSWORD=bytebot

# Task Configuration
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT_SECONDS=3600

# File Upload
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=/tmp/bytebot/uploads

# Computer Use Settings
SCREENSHOT_QUALITY=85
MOUSE_MOVE_DURATION=0.1
KEYBOARD_TYPE_DELAY=0.05